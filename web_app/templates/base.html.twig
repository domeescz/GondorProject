{# templates/base.html.twig #}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}GondorProject - DEMO - Do not send any documents{% endblock %}</title>

{% block stylesheets %}
            {# 'app' must match the first argument to addEntry() in webpack.config.js #}
            {{ encore_entry_link_tags('app') }}

            <!-- Renders a link tag (if your module requires any CSS)
                 <link rel="stylesheet" href="/build/app.css"> -->
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}

            <!-- Renders app.js & a webpack runtime.js file
                <script src="/build/runtime.js" defer></script>
                <script src="/build/app.js" defer></script>
                See note below about the "defer" attribute -->
    {% endblock %}
    


    <link rel="stylesheet" href="{{ asset('css/styles.css') }}">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
<script src="https://code.jquery.com/jquery-3.7.1.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
<script src="{{ asset('js/script.js') }}"></script>
</head>
<body class=" bg-light">

<script>
    $(document).ready(function(){
        $("#leftMenu").height($(window).height());
        $("#rightMenu").height($(window).height());
        $("#context").height($(window).height());
        

    });
</script>

<header>

 <nav class="navbar navbar-expand-lg navbar-light bg-primary fixed-top">
            <div class="logo" id="homeMagazin">Gondor Magazín</div>

        <div class="collapse navbar-collapse justify-content-end" id="navbarSupportedContent">
            <div class="nav-links">
                <a href="{{ path('app_login') }}" class="{% if app.request.attributes.get('_route') == 'app_login' %}active{% endif %}">Přihlášení</a>
                {% if app.request.attributes.get('_route') != 'app_login' %}
                    <div class="login-info">
                        User: <span id="username">{{ app.user ? app.user.username : 'unknown' }}</span>
                    </div>
                {% endif %}
            </div>
        </div>
        </nav>

</header>

<div class="container-fluid min-vh-100 min-vw-100">

<div class="row fixed-top mt-5">

    <div class="col-1 bg-info rounded " data-trigger="hover" id="leftMenu">

            <ul class="nav flex-column" id="navbarNavAltMarkup">
                <li class="nav-item"><a class="nav-link" href="/home">Home</a></li>
                <li class="nav-item"><a class="nav-link" href="/redaktor">Redaktor</a></li>
                <li class="nav-item"><a class="nav-link" href="/autor">Autor</a></li>
                <li class="nav-item"><a class="nav-link" href="/recenzent">Recenzent</a></li>
                <li class="nav-item"><a class="nav-link" href="/sefredaktor">ŠéfRedaktor</a></li>
                <li class="nav-item"><a class="nav-link" href="/admin/users">Admininstrace</a></li>
                
            </ul>
        
    </div>

    <div class="col-10" id="context">

    {% block body %}{% endblock %}

    </div>
    <div class="col-1" id="rightMenu"></div>

</div>
</div>

<footer>
<div class="fixed-bottom">
<p class="text-center">2023 - Studenstský projekt redakčniho systemu. Nezasílejte žádné dokumenty</p>

</div>
    <!-- Footer content here -->
</footer>

</body>
</html>
