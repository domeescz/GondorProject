{% extends 'base.html.twig' %}

{% block title %}Articles index{% endblock %}

{% block body %}
    <h1>Articles index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>AuthorID</th>
                <th>FileID</th>
                <th>Status</th>
                <th>Annotation</th>
                <th>UploadDate</th>
                <th>AcceptDate</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for article in articles %}
            <tr>
                <td>{{ article.id }}</td>
                <td>{{ article.Title }}</td>
                <td>{{ article.AuthorID }}</td>
                <td>{{ article.FileID }}</td>
                <td>{{ article.Status }}</td>
                <td>{{ article.Annotation }}</td>
                <td>{{ article.UploadDate ? article.UploadDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ article.AcceptDate ? article.AcceptDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_articles_show', {'id': article.id}) }}">show</a>
                    <a href="{{ path('app_articles_edit', {'id': article.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_articles_new') }}">Create new</a>
{% endblock %}
