{% extends 'base.html.twig' %}

{% block title %}Files index{% endblock %}

{% block body %}
    <h1>Files index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>FileName</th>
                <th>UploadDate</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for file in files %}
            <tr>
                <td>{{ file.id }}</td>
                <td>{{ file.FileName }}</td>
                <td>{{ file.UploadDate ? file.UploadDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_files_show', {'id': file.id}) }}">show</a>
                    <a href="{{ path('app_files_edit', {'id': file.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_files_new') }}">Create new</a>
{% endblock %}
